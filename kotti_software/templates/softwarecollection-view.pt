<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en"
      i18n:domain="kotti_software"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="api.macro('kotti:templates/view/master.pt')">

  <article metal:fill-slot="content" class="softwarecollection-view content">

    <h1>${api.context.title}</h1>
    <p class="description">
      ${api.context.description}
    </p>
    <p class="body">
      ${structure: api.context.body}
    </p>

    <div tal:condition="projects" class="softwareprojects">
      <div tal:repeat="project projects" class="softwareproject" data-uri="${api.url(project)}">
        <span class="date" tal:define="format api.format_date">
          ${format(project.date)}
        </span>
        <h2>
          <a href="${api.url(project)}" title="${project.description}" tal:omit-tag="not: settings['link_headline_overview']">
            ${project.title}
          </a>
        </h2>
        <ul class="nav nav-pills">
            <li tal:condition="project.home_page_url" class="active">
              <a href="${project.home_page_url}" title="${project.home_page_url}">
                Home Page
              </a>
            </li>
            <li tal:condition="project.docs_url" class="active">
              <a href="${project.docs_url}" title="Docs">
                Docs
              </a>
            </li>
            <li tal:condition="project.package_url" class="active">
              <a href="${project.package_url}" title="${project.package_url}">
                Download
              </a>
            </li>
            <li tal:condition="project.bugtrack_url" class="active">
              <a href="${project.bugtrack_url}" title="${project.bugtrack_url}">
                Bugtracker
              </a>
            </li>
        </ul>
        <p>${structure: project.body}</p>
      </div>
    </div>

   <tal:pagination tal:condition="settings['use_batching']"
                   metal:use-macro="macros.macros['pagination']" />

  </article>
</html>
